{
  "name": "metacord",
  "version": "0.1.0",
  "private": true,
  "description": "Metacord - Your Personal Discord Server Directory",
  "scripts": {
    "dev": "concurrently -k \"pnpm run dev:ui\" \"pnpm run dev:api\"",
    "dev:ui": "vite",
    "dev:api": "wrangler dev --env development",
    "build": "vite build",
    "preview": "pnpm run build && wrangler dev --env development",
    "deploy": "pnpm run build && wrangler deploy --env=production",
    "deploy:prod": "pnpm run build && wrangler deploy --env=production",
    "deploy:dev": "pnpm run build && wrangler deploy --env=development",
    "types": "wrangler types"
  },
  "dependencies": {
    "hono": "^4.11.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260118.0",
    "@types/node": "^20.19.30",
    "concurrently": "^8.2.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "wrangler": "^4.59.3"
  }
}
